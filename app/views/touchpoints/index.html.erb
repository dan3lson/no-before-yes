<h1>Touchpoints</h1>

<p><%= link_to 'New Touchpoint', new_touchpoint_path %></p>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Contact</th>
      <th>Recap</th>
      <th>Follow up on</th>
      <th>Source</th>
      <th>Result</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @touchpoints.each do |touchpoint| %>
      <tr>
        <td><%= link_to touchpoint.contact.name, touchpoint.contact %></td>
        <td><%= touchpoint.recap %></td>
        <td><%= TouchpointPresenter.new(touchpoint).follow_up_on %></td>
        <td><%= touchpoint.source %></td>
        <td><%= touchpoint.result %></td>
        <td><%= TouchpointPresenter.new(touchpoint).created_at %></td>
        <td><%= link_to 'Show', touchpoint %></td>
        <td><%= link_to 'Edit', edit_touchpoint_path(touchpoint) %></td>
        <td>
          <%= link_to 'Destroy',
                      touchpoint,
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
