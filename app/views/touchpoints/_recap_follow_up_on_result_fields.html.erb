<div class="form-group">
	<%= form.label :recap %>
	<%= form.text_area :recap, class: 'form-control' %>
</div>

<div class="form-group">
	<%= form.label :follow_up_on %>
	<%= form.date_select :follow_up_on,
											 { order: [:month, :day, :year] },
											 class: 'form-control' %>
</div>

<div class="form-group">
	<%= form.label :source %>
	<%= form.select :source,
									TouchpointPresenter.new(touchpoint).source_dropdown_options,
									{},
									class: 'form-control' %>
</div>

<div class="form-group">
	<%= form.label :result %>
	<%= form.select :result,
									TouchpointPresenter.new(touchpoint).result_dropdown_options,
									{},
									{ class: 'form-control' } %>
</div>
