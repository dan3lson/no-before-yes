<!DOCTYPE html>
<html>
  <head>
    <title>NoBeforeYes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light mb-3">
      <span class="navbar-brand mb-0 h1">No Before Yes</span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item <%= active_link?(:dashboard) %>">
            <%= link_to 'Dashboard',
                        dashboard_path,
                        class: 'nav-link' %>
          </li>
          <li class="nav-item <%= active_link?(:contacts) %>">
            <%= link_to 'Contacts',
                        contacts_path,
                        class: 'nav-link' %>
          </li>
          <li class="nav-item <%= active_link?(:touchpoints) %>">
            <%= link_to 'Touchpoints',
                        touchpoints_path,
                        class: 'nav-link' %>
          </li>
          <li class="nav-item <%= active_link?(:stats) %>">
            <%= link_to 'Stats',
                        stats_path,
                        class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">

      <p id="notice"><%= notice %></p>

      <%= yield %>
    </div>
  </body>
</html>
