<h1>Blog</h1>

<p><%= link_to 'New Blog Post', new_admin_blog_post_path %></p>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Background Color</th>
        <th>Icon</th>
        <th>Title</th>
        <th>Status</th>
        <th>Publish On</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @blog_posts.each do |blog_post| %>
        <tr>
          <td class="bg-<%= blog_post.bg_color %>"></td>
          <td><%= fa_icon blog_post.icon %></td>
          <td><%= blog_post.title %></td>
          <td><%= blog_post.status %></td>
          <td><%= blog_post.publish_on %></td>
          <td><%= link_to 'Show', admin_blog_post_path(blog_post) %></td>
          <td><%= link_to 'Edit', edit_admin_blog_post_path(blog_post) %></td>
          <td>
            <%= link_to 'Destroy',
                        admin_blog_post_path(blog_post),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
